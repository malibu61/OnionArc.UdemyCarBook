@using UdemyCarBook.Dto.BannerDtos
@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Banner alanına veri girişini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olmaması adına yeni bir banner girişi yaptıktan sonra önceki banner alanını silin, sadece 1 tane banner verisi kalmalıdır.</p>
                        <form method="post">
                            @Html.HiddenFor(x => x.BannerID)
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <label for="exampleInputTitle">Başlık</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Başlığı Giriniz" })
                            </div>
                            @Html.LabelFor(x => x.BannerID)
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklamayı Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklama</label>
                                @Html.TextBoxFor(x => x.VideoDescription, new { @class = "form-control", placeholder = "Video Açıklama Bilgisini Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Video Url</label>
                                @Html.TextBoxFor(x => x.VideoUrl, new { @class = "form-control", placeholder = "Video'nun Youtube Embed Linkini Giriniz" })
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Banner Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

