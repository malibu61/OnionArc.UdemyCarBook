@model UdemyCarBook.Dto.SocialMediaDtos.UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Sayfası Veri Düzenleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal medya hesaplarınıza ait veri düzenlemelerini buradan yapabilirsiniz. İkonlarla ilgili listeye ikon listesi üzerinden ulaşabilirsiniz.
                        </p>
                        <form method="post">
                            @Html.HiddenFor(x => x.SocialMediaID)
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Başlığı</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Sosyal Medya Başlığını Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL</label>
                                @Html.TextBoxFor(x => x.Url, new { @class = "form-control", placeholder = "Sosyal Medya Sayfanızın URL Linkini Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Sosyal Medya İkon</label>
                                @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", placeholder = "Sosyal Medya Ikon Bilgisini Giriniz" })
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

