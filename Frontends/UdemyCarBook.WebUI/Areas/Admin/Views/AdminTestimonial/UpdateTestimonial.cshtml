@using UdemyCarBook.Dto.TestimonialDtos
@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Sayfası Veri Düzenleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Referans düzenleme işleminin yapıldığı sayfamızdır. Bilgileri eksiksiz olarak doldurup kaydet butonuna tıklamanız yeterlidir.
                        </p>
                        <form method="post">
                            @Html.HiddenFor(x => x.TestimonialID)
                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad Soyad</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Referans Adı ve Soyadını Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Unvanı</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Referans Unvanını Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Görsel</label>
                                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", placeholder = "Görsel Seçiniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Yorumu</label>
                                @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", placeholder = "Yorumunuzu Buraya Yazabilirsiniz.", rows = "5" })
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


