@using UdemyCarBook.Dto.FooterAddressDtos
@model UpdateFooterAddressDto

@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Adres alanına ait bilgileri aşağıdaki panelden girebilirsiniz.</p>
                        <form method="post">
                            @Html.HiddenFor(x => x.FooterAddressID)
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres</label>
                                @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Adres Bilgisini Giriniz" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklamayı  Giriniz" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon Numarası</label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefon Numarasını  Giriniz" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputMail">Email Adresi</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Mail Adresini  Giriniz" })
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adresi Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
