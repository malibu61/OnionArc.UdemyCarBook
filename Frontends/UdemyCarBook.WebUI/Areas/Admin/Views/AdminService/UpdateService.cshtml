@using UdemyCarBook.Dto.ServiceDtos
@model UpdateServiceDto

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Sayfası Veri Düzenleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki sayfadan gerçekleştirebilirsiniz. Tema bütünlüğünü korumak adına 4 tane hizmet girişi yapınız.
                        </p>
                        <form method="post">
                            @Html.HiddenFor(x => x.ServiceID)
                            <div class="form-group">
                                <label for="exampleInputTitle">Hizmet Başlığı</label>
                                @Html.TextAreaFor(x => x.Title, new { @class = "form-control", placeholder = "Hizmet Başlığını Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Hizmet Açıklaması</label>
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Hizmet Açıklamasını Giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">Hizmet Ikon Url</label>
                                @Html.TextAreaFor(x => x.IconUrl, new { @class = "form-control", placeholder = "Hizmet Ikon Bilgisini Giriniz" })
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Hizmet Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
