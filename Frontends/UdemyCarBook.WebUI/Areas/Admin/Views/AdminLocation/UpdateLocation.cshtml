@using UdemyCarBook.Dto.LocationDto
@model UpdateLocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Araçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin girildiği sayfadır. Bilgileri eksiksiz olarak doldurun.
                        </p>
                        <form method="post">
                            @Html.HiddenFor(x => x.LocationID)
                            <div class="form-group">
                                <label for="exampleInputName">Lokasyon Adı</label>
                                @Html.TextAreaFor(x => x.Name, new { @class = "form-control", placeholder = "Lokasyon Adını Giriniz" })

                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Lokasyon Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>